<Window x:Class="Monopoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly"
        mc:Ignorable="d"
        Title="Monopoly (Prototype1)" Height="700" Width="1100" KeyDown="Window_KeyDown">
    <Grid>
        <Menu Height="22" VerticalAlignment="Top">
            <MenuItem Header="Połącz" Click="btnConnectToServer_Click"/>
            <MenuItem Header="Status: "/>
            <MenuItem x:Name="ConnectionStatus"/>
            <Separator Width="30" Background="#FFD7D7D7" Height="14"/>
            <MenuItem Header="0$"/>
        </Menu>
        <Canvas Height="640" Margin="226,22,226,7" Width="640" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <Canvas.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/monopolyboard.jpg"/>
            </Canvas.Background>
            <Image x:Name="Player1" Height="15" Canvas.Left="566" Canvas.Top="582" Width="15" Source="pack://siteoforigin:,,,/Resources/hellhound_sjpg.jpg"/>
        </Canvas>
        <GroupBox Header="Kostki do gry" HorizontalAlignment="Left" Height="186" Margin="10,27,0,0" VerticalAlignment="Top" Width="198">
            <Grid HorizontalAlignment="Left" Height="160" VerticalAlignment="Top" Width="188" Margin="0,0,-2,0">
                <Label x:Name="Dice1" Content="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <Label x:Name="Dice2" Content="1" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
                <Button Content="Rzuć kośćmi!" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Width="112" Height="35" Click="Button_Click"/>
                <Label x:Name="DiceScore" Content="2" HorizontalAlignment="Left" Margin="140,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="38"/>
            </Grid>
        </GroupBox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="19,304,0,0" VerticalAlignment="Top" Width="75" Click="btnSendMessage_Click"/>

    </Grid>
</Window>
