<Window x:Class="Monopoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly"
        mc:Ignorable="d"
        Title="Monopoly (Alpha 0.2)" Height="700" Width="1100" KeyDown="Window_KeyDown">
    <Grid>
        <Menu Height="22" VerticalAlignment="Top">
            <MenuItem Header="Gra jednoosobowa">
                <MenuItem Header="Nowa gra"/>
                <MenuItem Header="Zapisz grę"/>
                <MenuItem Header="Wczytaj grę"/>
                <MenuItem Header="Przerwij grę"/>
            </MenuItem>
            <MenuItem Header="Gra wieloosobowa" Click="MenuItem_Click">
                <MenuItem Header="Połącz"/>
            </MenuItem>
            <MenuItem Header="Opcje">
                <MenuItem Header="Dźwięk"/>
                <MenuItem Header="Głośność">
                    <MenuItem Header="100%"/>
                    <MenuItem Header="90%"/>
                    <MenuItem Header="80%"/>
                    <MenuItem Header="70%"/>
                    <MenuItem Header="60%"/>
                    <MenuItem Header="50%"/>
                    <MenuItem Header="40%"/>
                    <MenuItem Header="30%"/>
                    <MenuItem Header="20%"/>
                    <MenuItem Header="10%"/>
                </MenuItem>
                <MenuItem Header="Powiększ planszę"/>
            </MenuItem>
            <MenuItem Header="Pomoc">
                <MenuItem Header="Pomoc"/>
                <MenuItem Header="O aplikacji"/>
            </MenuItem>
            <Separator Width="50" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalAlignment="Center"/>
            <MenuItem Header="Status połączenia sieciowego: " HorizontalAlignment="Right"/>
            <MenuItem x:Name="ConnectionStatus" Width="409"/>
            <MenuItem Header="0$" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Width="78"/>
        </Menu>
        <Canvas Height="640" Margin="226,22,226,7" Width="640" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
            <Canvas.Background>
                <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/monopolyboard.jpg"/>
            </Canvas.Background>
            <Image x:Name="Field1" Height="84" Canvas.Left="556" Canvas.Top="556" Width="84" MouseEnter="Field1_MouseEnter" Source="pack://siteoforigin:,,,/Resources/FieldStart.jpg" OpacityMask="#00000000"/>
            <Image x:Name="Field2" Height="84" Canvas.Left="504" Canvas.Top="556" Width="52" MouseEnter="Field2_MouseEnter" Source="Resources/FieldStart.jpg" OpacityMask="#00000000"/>
            <Image x:Name="Field3" Height="84" Canvas.Left="452" Canvas.Top="556" Width="52" MouseEnter="Field3_MouseEnter" Source="Resources/FieldStart.jpg" OpacityMask="#00000000"/>
            <Image x:Name="Player1" Height="20" Canvas.Left="566" Canvas.Top="582" Width="20" Source="pack://siteoforigin:,,,/Resources/BluePlayer.png"/>
            <Image x:Name="Player2" Height="20" Width="20" Source="Resources/GreenPlayer.png" Canvas.Left="591" Canvas.Top="582"/>
        </Canvas>
        <GroupBox Header="Kostki do gry" HorizontalAlignment="Left" Height="186" Margin="10,22,0,0" VerticalAlignment="Top" Width="198">
            <Grid Margin="0">
                <Label x:Name="Dice1" Content="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <Label x:Name="Dice2" Content="1" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
                <Button x:Name="Button_ThrowDice" Content="Rzuć kośćmi!" HorizontalAlignment="Left" Margin="9,115,0,0" VerticalAlignment="Top" Width="81" Height="35" Click="Button_Click"/>
                <Label x:Name="DiceScore" Content="2" HorizontalAlignment="Left" Margin="140,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="38"/>
                <Button x:Name="Button_EndTurn" Content="Zakończ turę" HorizontalAlignment="Left" Margin="95,115,0,0" VerticalAlignment="Top" Width="83" Height="35" Click="EndTurn_Click" IsEnabled="False"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Podgląd" HorizontalAlignment="Left" Height="449" Margin="10,0,0,7" VerticalAlignment="Bottom" Width="198">
            <Grid Margin="0">
                <Image x:Name="Overview_Picture" HorizontalAlignment="Left" Height="163" Margin="10,10,0,0" VerticalAlignment="Top" Width="166" Source="Resources/FieldStart.jpg"/>
                <Label x:Name="Overview_Name" Content="Pole startu" HorizontalAlignment="Left" Margin="10,178,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="166"/>
                <Label Content="Koszt: " HorizontalAlignment="Left" Margin="10,204,0,0" VerticalAlignment="Top"/>
                <Label Content="Domy / Hotele: " HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top"/>
                <Label Content="Właściciel: " HorizontalAlignment="Left" Margin="10,253,0,0" VerticalAlignment="Top"/>
                <Label x:Name="Overview_Price" Content="0 $" HorizontalAlignment="Right" Margin="0,204,10,0" VerticalAlignment="Top" Width="93" HorizontalContentAlignment="Right"/>
                <Label x:Name="Overview_Houses" Content="0" HorizontalAlignment="Right" Margin="0,230,10,0" VerticalAlignment="Top" Width="67" HorizontalContentAlignment="Right" RenderTransformOrigin="0.478,0.5"/>
                <Label x:Name="Overview_Owner" Content="Mr. Nobody" HorizontalAlignment="Right" Margin="0,253,10,0" VerticalAlignment="Top" Width="93" HorizontalContentAlignment="Right" RenderTransformOrigin="0.478,0.5"/>
                <Label Content="1 dom:" HorizontalAlignment="Left" Margin="10,291,0,0" VerticalAlignment="Top" FontSize="11"/>
                <Label Content="2 domy:" HorizontalAlignment="Left" Margin="10,316,0,0" VerticalAlignment="Top" FontSize="11"/>
                <Label Content="3 domy:" HorizontalAlignment="Left" Margin="10,341,0,0" VerticalAlignment="Top" FontSize="11"/>
                <Label Content="4 domy:" HorizontalAlignment="Left" Margin="10,366,0,0" VerticalAlignment="Top" FontSize="11"/>
                <Label Content="Hotel:" HorizontalAlignment="Left" Margin="10,391,0,0" VerticalAlignment="Top" FontSize="11"/>
                <Label x:Name="Overview_1Rent" Content="0 $" HorizontalAlignment="Right" Margin="0,291,10,0" VerticalAlignment="Top" Width="93" HorizontalContentAlignment="Right" FontSize="11"/>
                <Label x:Name="Overview_2Rent" Content="0 $" HorizontalAlignment="Right" Margin="0,316,10,0" VerticalAlignment="Top" Width="93" HorizontalContentAlignment="Right" FontSize="11"/>
                <Label x:Name="Overview_3Rent" Content="0 $" HorizontalAlignment="Right" Margin="0,341,10,0" VerticalAlignment="Top" Width="93" HorizontalContentAlignment="Right" FontSize="11"/>
                <Label x:Name="Overview_4Rent" Content="0 $" HorizontalAlignment="Right" Margin="0,366,10,0" VerticalAlignment="Top" Width="93" HorizontalContentAlignment="Right" FontSize="11"/>
                <Label x:Name="Overview_HRent" Content="0 $" HorizontalAlignment="Right" Margin="0,391,10,0" VerticalAlignment="Top" Width="93" HorizontalContentAlignment="Right" FontSize="11"/>
                <Label Content="Czynsz" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Statystyki" HorizontalAlignment="Right" Height="169" Margin="0,27,10,0" VerticalAlignment="Top" Width="211">
            <Grid Margin="0">
                <Label Content="Gracz 1 (To ty!)" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Label Content="Gracz 2" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                <Label Content="Gracz 3" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
                <Label Content="Gracz 4" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top"/>
                <Label Content="1500$" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="79"/>
                <Label Content="1500$" HorizontalAlignment="Right" Margin="0,41,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="79"/>
                <Label Content="1500$" HorizontalAlignment="Right" Margin="0,72,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="79"/>
                <Label Content="1500$" HorizontalAlignment="Right" Margin="0,103,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Right" Width="79"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Wiadomości" HorizontalAlignment="Right" Height="461" Margin="0,0,10,7" VerticalAlignment="Bottom" Width="211">
            <Grid Margin="0">
                <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="418" Width="179"><Run Text="Gracz 4 banrkutuje!"/><LineBreak/><Run/><LineBreak/><Run Text="Gracz 3 otrzymuje kartę bezpłatnego wyjścia z więzienia!"/></TextBlock>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
